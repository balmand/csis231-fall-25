<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.CustomerFormController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="Customer Information" styleClass="form-title"/>
    
    <VBox spacing="15.0">
        <VBox spacing="5.0">
            <Label text="Full Name" styleClass="field-label"/>
            <TextField fx:id="nameField" promptText="Enter customer's full name" styleClass="form-field"/>
        </VBox>
        
        <VBox spacing="5.0">
            <Label text="Email Address" styleClass="field-label"/>
            <TextField fx:id="emailField" promptText="Enter email address" styleClass="form-field"/>
        </VBox>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel" styleClass="secondary-button"/>
        <Button fx:id="saveButton" text="Save" onAction="#onSave" styleClass="primary-button"/>
    </HBox>
</VBox>
