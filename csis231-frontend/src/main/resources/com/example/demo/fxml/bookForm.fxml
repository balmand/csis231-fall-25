<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.BookFormController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <!-- Form Title -->
    <Label text="Book Information" styleClass="form-title"/>

    <!-- Form Fields -->
    <VBox fx:id="fieldsVBox" spacing="15.0">
        <VBox spacing="5.0">
            <Label text="Title" styleClass="field-label"/>
            <TextField fx:id="titleField" promptText="Enter book title" styleClass="form-field"/>
        </VBox>

        <VBox spacing="5.0">
            <Label text="Author" styleClass="field-label"/>
            <TextField fx:id="authorField" promptText="Enter author name" styleClass="form-field"/>
        </VBox>

        <VBox spacing="5.0">
            <Label text="Year" styleClass="field-label"/>
            <TextField fx:id="yearField" promptText="Enter publication year" styleClass="form-field"/>
        </VBox>

        <VBox spacing="5.0">
            <Label text="Price" styleClass="field-label"/>
            <TextField fx:id="priceField" promptText="Enter book price" styleClass="form-field"/>
        </VBox>

        <VBox spacing="5.0">
            <Label text="ISBN" styleClass="field-label"/>
            <TextField fx:id="isbnField" promptText="Enter ISBN number" styleClass="form-field"/>
        </VBox>
    </VBox>

    <!-- Make the fields VBox expand to push buttons to the bottom -->
    <HBox VBox.vgrow="ALWAYS"/> <!-- Empty HBox to absorb extra space -->

    <!-- Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel" styleClass="secondary-button"/>
        <Button fx:id="saveButton" text="Save" onAction="#onSave" styleClass="primary-button"/>
    </HBox>
</VBox>
