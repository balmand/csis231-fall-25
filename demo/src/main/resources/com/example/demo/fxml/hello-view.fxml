        </VBox>
    </top>
    
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="10.0"/>
            </padding>
            
            <Label text="Customer List" styleClass="section-label"/>
            <TableView fx:id="customerTable" VBox.vgrow="ALWAYS" styleClass="customer-table">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" prefWidth="250" styleClass="table-column"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="350" styleClass="table-column"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox>
