<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.HelloController">
    <top>
        <VBox spacing="15.0" styleClass="header-section">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0"/>
            </padding>
            
            <Label fx:id="welcomeText" text="Customer Management System" styleClass="title-label"/>
            
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Button fx:id="addButton" text="+ Add Customer" onAction="#onAddCustomer" styleClass="primary-button"/>
